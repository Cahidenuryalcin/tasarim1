@model OnlineSiparis.Models.Cart

@{
    Layout =null ;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE-edge" />
    <meta name="viewport" content="width=device-width, initial-scale:1.0" />
    <title>Menu</title>
    <!--link-->
    <link rel="stylesheet" href="/ecom/css/style.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css " />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>
<body>
    <header>

        <div class="nav container">
            <h2>Sepet sayfası</h2>

        </div>
    </header>



    <section class="shop container">
        <h2 class="section-title"></h2>
        <!--content-->
        <div class="shop-content">
            <!--box 1-->

            <div class="container pb-5">
                <div class="row">
                    <div class="col-md-12">

                        @if (Model.CartLines.Count > 0)
                        {

                            <table class="table table-responsive">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>Adet</th>
                                        <th>Yemek Ad</th>
                                        <th>Fiyat</th>
                                        <th>Toplam Fiyat</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.CartLines)
                                    {
                                        <tr>
                                            <td>
                                                <img src="~/projefoto/@item.Yemek.Image" style="width:70px" class="img-circle img-thumbnail" />
                                            </td>
                                            <td class="align-middle">
                                                @item.Quantity
                                            </td>
                                            <td class="align-middle">
                                                @item.Yemek.Name
                                            </td>
                                            <td class="align-middle">
                                                @item.Yemek.Price.ToString("c")
                                            </td>
                                            <td class="align-middle">
                                                @((item.Yemek.Price * item.Quantity).ToString("c"))
                                            </td>
                                            <td>
                                                @using (Html.BeginForm("RemoveFromCart", "Cart"))
                                                {
                                                    @Html.Hidden("Id", item.Yemek.Id)
                                                    <button type="submit" class="btn btn-danger">
                                                        <i class="fa fa-trash-o" aria-hidden="true"></i>
                                                        Sil
                                                    </button>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td colspan="5"></td>
                                        <td>
                                            @Model.Total().ToString("c")
                                        </td>
                                    </tr>
                                </tfoot>

                            </table>
                            <div class="text-center">
                                <a href="https://localhost:44334/Home/Menu" class="btn btn-primary">
                                    <i class="fa fa-angle-double-left" aria-hidden="true"></i>
                                    Menüye Git
                                </a>
                                <a href="https://localhost:44334/Cart/Chechout" class="btn btn-primary">
                                    <i class="fa fa-check" aria-hidden="true"></i>
                                    Siparişi Tamamla
                                </a>
                            </div>
                        }

                        else
                        {
                            <div class="alert alert-warning" role="alert">
                                <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
                                Sepetinizde ürün Bulunmamaktadır.
                            </div>

                            <hr />
                            <a href="https://localhost:44334/Home/Menu" class="btn btn-primary">
                                <i class="fa fa-angle-double-left" aria-hidden="true"></i>
                                Menüye Git
                            </a>
                        }
                    </div>

                </div>
            </div>

        </div>
    </section>


</body>
</html>




