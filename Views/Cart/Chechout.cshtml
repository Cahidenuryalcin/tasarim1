@model OnlineSiparis.Models.ShippingDetails
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE-edge" />
    <meta name="viewport" content="width=device-width, initial-scale:1.0" />
    <title>Menu</title>
    <!--link-->
    <link rel="stylesheet" href="/ecom/css/style.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css " />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>
<body>
    <header>

        <div class="nav container">
            <h2>Sipariş Bilgi Sayfası</h2>

        </div>
    </header>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <hr />
                <hr />
                <hr />
                <hr />
                <hr />
                <p>Lütfen Sipariş Bilgilerinizi Girin</p>

                @using (Html.BeginForm())

                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="from-group">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Ad</label>
                        <div class="col-sm-4">
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="from-group">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Servis Sayısı</label>
                        <div class="col-sm-4">
                            @Html.TextBoxFor(x => x.Service, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Service, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="from-group">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Masa Numarası</label>
                        <div class="col-sm-4">
                            @Html.DropDownListFor(x => x.No, new SelectList(Model.Masalar,"Id","Id"), new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.No, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="from-group">
                        <label for="inputEmail3" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-4">
                            <button type="submit" class="btn btn-primary">Siparişi Ver</button>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
   

</body>
</html>
